{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "git@github.com:lkomar/node-express-typescript-boilerplate.git",
  "author": "≈Åukasz Komar",
  "license": "MIT",
  "scripts": {
    "start": "nodemon",
    "lint:fix": "eslint './src/**/*.ts'"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "git add",
      "eslint -c .eslintrc"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "export CI=true && yarn tsc --noEmit && lint-staged"
    }
  },
  "dependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/helmet": "^0.0.47",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.23.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
